<% if logged_in? %>
  <%= link_to ("<i class='fa fa-edit'></i> " + 'Edit').html_safe,
              edit_appointment_path(object),
              class: 'btn btn-primary' %>
  <%= link_to ("<i class='fa fa-trash'></i> " + 'Delete').html_safe,
              appointment_path(object),
              :method => 'delete',
              :data => { :confirm => 'Are you sure you want to delete this appointment?' },
              :class => 'btn btn-danger' %>
<% end %>