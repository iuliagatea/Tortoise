<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= render 'shared/error_messages', object: @user %>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for(:registration, :html => {class: 'form-horizontal' }, url: registrations_path) do |f| %>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
        </div>
      </div>

      <%= render 'sessions/login_input' , object:f %>

      <div class="form-group">
        <div class="input-group">
          <%= f.check_box :is_partner %> Sign up as partner
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-building fa-fw"></i></span>
          <%= f.text_field :Company, class: 'form-control', placeholder: 'Company Name' %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <%= f.submit('Sign up', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <div class="input-group">
      [ <%= link_to 'Cancel request and return home', root_path %> ]
    </div>
  </div>
</div>
