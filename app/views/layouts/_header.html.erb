<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to ("<i class='fa fa-ravelry'></i> " + 'Calendario').html_safe, root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li class="navbar-search">
          <%= render 'layouts/search_form' %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= ('<i class="fa fa-user-circle"></i> ' + truncate(current_user.full_name, length: 25)).html_safe %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.is_partner %>
                <li><%= link_to "<i class='fa fa-wrench'></i> Add service".html_safe, new_service_path %></li>
                <li><%= link_to "<i class='fa fa-calendar-o'></i> Add avalability".html_safe, new_availability_path %></li>
                <li><%= link_to "<i class='fa fa-cog fa-spin'></i> Manage appointments".html_safe, appointments_path %></li>
                <li><%= link_to "<i class='fa fa-calendar-plus-o'></i> Manage services".html_safe, services_path %></li>
              <% end %>
              <li><%= link_to "<i class='fa fa-power-off'></i> Log out".html_safe, logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "<i class='fa fa-lock'></i> Log in".html_safe, login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
